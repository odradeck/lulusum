<h2>회원정보 수정</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :label=>"이메일", :required => true, :autofocus => true %>
    <%= f.input :password, :label=>"비밀번호", :autocomplete => "off", :required => false %>
    <%= f.input :password_confirmation, :label=>"비밀번호확인", :required => false %>
    <%= f.input :name, :label=>"이름", :required => true %>
  </div>

  <div >
    <%= f.button :submit, "수정" %>
  </div>
<% end %>


<p>회원탈퇴 <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>
