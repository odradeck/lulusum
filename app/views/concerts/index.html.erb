<% if params[:filter] == 'favorit'%>
<h4>찜한 공연 리스트</h4>
<%else%>
<h4>공연 리스트</h4>
<%end%>
<div class="row-fluid">
	<div class="span12">
			<div class="row-fluid">
            
            	<% @concerts.each_with_index do |concert, index| %>
            	<%if index%3==0 %> <ul class="thumbnails"> <%end%>
              <li class="span4">
                <div class="thumbnail">
                 <img src='<%= concert.poster%>'>
                 	<div class="caption">
                 		<h4><%= link_to concert.title, new_ticket_path(:concert_id=>concert.id) =%>
                 			<%if current_user.admin?%> <small><%= link_to '수정', edit_concert_path(concert) %>|<%= link_to '삭제', concert, confirm: 'Are you sure?', method: :delete %></small><%end%>
                 		</h4>
                 		<%= concert.description %>
                    </div>
                </div>
              </li>
              <%if index%3==2%> </ul> <%end%> 
             <%end%>
             
              </div>
	</div>

</div>



<br />

<%= link_to 'New Concert', new_concert_path %>
